= form_for @content do |f|
  - if @content.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content.errors.count, "error")} prohibited this content from being saved:"
      %ul
        - @content.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "タイトル"
    = f.text_field :title
  .field
    = f.label "キャプチャ画像"
    = f.file_field :image
  .field
    = f.label "開発者名"
    = f.text_field :developer_name
  .field
    = f.label "詳細（Markdown可）"
    %textarea{name: "content[description]", style: "height: 10em;"}= @content.description
  .field
    = f.label "連絡先メールアドレス"
    = f.text_field :email 

  %h3 プラットフォーム(複数の場合カンマで区切る)
  .field
    = f.text_field :platform 
  .actions
    = f.submit 'Save'